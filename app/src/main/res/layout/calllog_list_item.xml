<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView android:id="@+id/nickname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="123123123123132"/>
    <TextView android:id="@+id/phonenumber_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/nickname_textview"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="123123123123132"/>
    <TextView android:id="@+id/duration_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/nickname_textview"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="2s"/>
    <TextView android:id="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/phonenumber_textview"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="2017-01-02 12:53"/>
</RelativeLayout>